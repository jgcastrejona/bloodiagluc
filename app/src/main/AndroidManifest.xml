<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extli.bloodiagluc" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logobloodia"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" >
        </activity>
        <activity android:name=".RegistroUsr" >
        </activity>
        <activity
            android:name=".RegistroPaciente"
            android:label="@string/title_activity_registro_paciente"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.extli.bloodiagluc.LoginActivity" />
        </activity>
        <activity android:name=".RegistroUsuario" >
        </activity>
    </application>

</manifest>
